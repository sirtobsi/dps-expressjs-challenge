// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ProjectDao {
  id          String      @id @default(uuid())
  name        String
  description String
  reports     ReportDao[]
}

model ReportDao {
  id        String     @id @default(uuid())
  text      String
  projectId String
  project   ProjectDao @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
